#pragma kernel CSMain

RWTexture2D<float4> Result;

float xPos;
float yPos;

float4 color;

bool lr;
bool ud;

[numthreads(1, 1, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    float xMult = 1;
    float yMult = 1;
	
    if (lr)
    {
        xMult = -1;
    }
	
    if (ud)
    {
        yMult = -1;
    }

	Result[int2(xPos + (6 * xMult), yPos)] = color;
	Result[int2(xPos + (7 * xMult), yPos)] = color;
	Result[int2(xPos + (7 * xMult), yPos - (1 * yMult))] = color;
	Result[int2(xPos + (4 * xMult), yPos - (2 * yMult))] = color;
	Result[int2(xPos + (6 * xMult), yPos - (2 * yMult))] = color;
	Result[int2(xPos + (4 * xMult), yPos - (3 * yMult))] = color;
	Result[int2(xPos + (6 * xMult), yPos - (13 * yMult))] = color;
	Result[int2(xPos + (8 * xMult), yPos - (13 * yMult))] = color;
	Result[int2(xPos + (7 * xMult), yPos - (14 * yMult))] = color;
	Result[int2(xPos + (7 * xMult), yPos - (15 * yMult))] = color;
	Result[int2(xPos + (10 * xMult), yPos - (24 * yMult))] = color;
	Result[int2(xPos + (10 * xMult), yPos - (25 * yMult))] = color;
	Result[int2(xPos + (11 * xMult), yPos - (25 * yMult))] = color;
	Result[int2(xPos + (9 * xMult), yPos - (26 * yMult))] = color;
	Result[int2(xPos + (12 * xMult), yPos - (29 * yMult))] = color;
	Result[int2(xPos + (13 * xMult), yPos - (29 * yMult))] = color;
	Result[int2(xPos + (3 * xMult), yPos - (30 * yMult))] = color;
	Result[int2(xPos + (12 * xMult), yPos - (30 * yMult))] = color;
	Result[int2(xPos + (3 * xMult), yPos - (31 * yMult))] = color;
	Result[int2(xPos + (3 * xMult), yPos - (32 * yMult))] = color;
	Result[int2(xPos, yPos - (34 * yMult))] = color;
	Result[int2(xPos + (2 * xMult), yPos - (34 * yMult))] = color;
	Result[int2(xPos + (2 * xMult), yPos - (35 * yMult))] = color;
	Result[int2(xPos + (3 * xMult), yPos - (35 * yMult))] = color;
	Result[int2(xPos + (3 * xMult), yPos - (36 * yMult))] = color;
}