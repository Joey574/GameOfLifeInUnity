#pragma kernel CSMain

RWTexture2D<float4> Result;

float xPos;
float yPos;

float4 color;

bool lr;
bool ud;

[numthreads(1, 1, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    float xMult = 1;
    float yMult = 1;
	
    if (lr)
    {
        xMult = -1;
    }
	
    if (ud)
    {
        yMult = -1;
    }

	Result[int2(xPos + (16 * xMult), yPos)] = color;
	Result[int2(xPos + (17 * xMult), yPos)] = color;
	Result[int2(xPos + (15 * xMult), yPos - (1 * yMult))] = color;
	Result[int2(xPos + (17 * xMult), yPos - (1 * yMult))] = color;
	Result[int2(xPos + (13 * xMult), yPos - (3 * yMult))] = color;
	Result[int2(xPos + (15 * xMult), yPos - (3 * yMult))] = color;
	Result[int2(xPos + (11 * xMult), yPos - (5 * yMult))] = color;
	Result[int2(xPos + (13 * xMult), yPos - (5 * yMult))] = color;
	Result[int2(xPos + (9 * xMult), yPos - (7 * yMult))] = color;
	Result[int2(xPos + (11 * xMult), yPos - (7 * yMult))] = color;
	Result[int2(xPos + (7 * xMult), yPos - (9 * yMult))] = color;
	Result[int2(xPos + (9 * xMult), yPos - (9 * yMult))] = color;
	Result[int2(xPos + (5 * xMult), yPos - (11 * yMult))] = color;
	Result[int2(xPos + (7 * xMult), yPos - (11 * yMult))] = color;
	Result[int2(xPos + (3 * xMult), yPos - (13 * yMult))] = color;
	Result[int2(xPos + (5 * xMult), yPos - (13 * yMult))] = color;
	Result[int2(xPos + (1 * xMult), yPos - (15 * yMult))] = color;
	Result[int2(xPos + (3 * xMult), yPos - (15 * yMult))] = color;
	Result[int2(xPos, yPos - (16 * yMult))] = color;
	Result[int2(xPos, yPos - (17 * yMult))] = color;
	Result[int2(xPos + (1 * xMult), yPos - (17 * yMult))] = color;
}