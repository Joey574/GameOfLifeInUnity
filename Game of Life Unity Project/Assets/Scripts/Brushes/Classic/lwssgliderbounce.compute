#pragma kernel CSMain

RWTexture2D<float4> Result;

float xPos;
float yPos;

float4 color;

bool lr;
bool ud;

[numthreads(1, 1, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    float xMult = 1;
    float yMult = 1;
	
    if (lr)
    {
        xMult = -1;
    }
	
    if (ud)
    {
        yMult = -1;
    }

	Result[int2((xPos + 1)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos + 2)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos + 3)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos + 4)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos + 21)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos + 22)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos + 23)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos + 24)) * xMult), (yPos) * yMult)] = color;
	Result[int2((xPos) * xMult), (yPos - 1)) * yMult)] = color;
	Result[int2((xPos + 4)) * xMult), (yPos - 1)) * yMult)] = color;
	Result[int2((xPos + 20)) * xMult), (yPos - 1)) * yMult)] = color;
	Result[int2((xPos + 24)) * xMult), (yPos - 1)) * yMult)] = color;
	Result[int2((xPos + 4)) * xMult), (yPos - 2)) * yMult)] = color;
	Result[int2((xPos + 24)) * xMult), (yPos - 2)) * yMult)] = color;
	Result[int2((xPos + 30)) * xMult), (yPos - 2)) * yMult)] = color;
	Result[int2((xPos + 31)) * xMult), (yPos - 2)) * yMult)] = color;
	Result[int2((xPos + 32)) * xMult), (yPos - 2)) * yMult)] = color;
	Result[int2((xPos) * xMult), (yPos - 3)) * yMult)] = color;
	Result[int2((xPos + 3)) * xMult), (yPos - 3)) * yMult)] = color;
	Result[int2((xPos + 20)) * xMult), (yPos - 3)) * yMult)] = color;
	Result[int2((xPos + 23)) * xMult), (yPos - 3)) * yMult)] = color;
	Result[int2((xPos + 30)) * xMult), (yPos - 3)) * yMult)] = color;
	Result[int2((xPos + 31)) * xMult), (yPos - 4)) * yMult)] = color;
	Result[int2((xPos + 40)) * xMult), (yPos - 12)) * yMult)] = color;
	Result[int2((xPos + 41)) * xMult), (yPos - 12)) * yMult)] = color;
	Result[int2((xPos + 42)) * xMult), (yPos - 12)) * yMult)] = color;
	Result[int2((xPos + 40)) * xMult), (yPos - 13)) * yMult)] = color;
	Result[int2((xPos + 41)) * xMult), (yPos - 14)) * yMult)] = color;
}